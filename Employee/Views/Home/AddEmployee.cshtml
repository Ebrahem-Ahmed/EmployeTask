@model Employees

<form asp-controller="Home" asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label>Name:</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address:</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Birth Date:</label>
        <input type="date" asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Graduation:</label>
        <input type="text" asp-for="Graduation" class="form-control" />
    </div>
    <div class="form-group">
        <label>Employment Type:</label>
        <input type="text" asp-for="EmploymentType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Salary:</label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
