@model Employees

<h2>Edit Employee</h2>

<form asp-action="EditEmployee">
    <input type="hidden" asp-for="Name" />
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Birth Date</label>
        <input asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Graduation">Graduation</label>
        <input asp-for="Graduation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmploymentType">Employment Type</label>
        <input asp-for="EmploymentType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Assurance">Assurance</label>
        <input asp-for="Assurance" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
